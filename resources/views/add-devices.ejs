<div class="content">
  <div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">Add SEMS Device</h2>
  </div>
  <form action="/add-device" method="POST">
    <input type="hidden" value="<%= session.passport.user%>" name="userId" />
    <% if (messages.error) { %>
    <p class="intro-y error-message text-red-500 mt-3"><%= messages.error %></p>
    <% } %>
    <div class="grid grid-cols-12 gap-6 mt-5">
      <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <div class="intro-y box p-5">
          <div>
            <label>Device Id</label>
            <input type="text" class="input w-full border mt-2" name="deviceId" placeholder="Unique Device Id" />
          </div>

          <div class="mt-3">
            <div class="sm:grid grid-cols-2 gap-2">
              <div class="relative mt-2">
                <div class="">
                  <label>Device Name</label>
                  <input type="text" class="input w-full border col-span-4" name="deviceName" placeholder="Enter a device name" />
                </div>
              </div>
              <div class="relative mt-2">
                <div class="pl-3">
                  <label>Room</label>
                  <input type="text" class="input w-full border col-span-4" name="room" placeholder="Enter Room" />
                </div>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <label>Description</label>
            <div class="mt-2">
              <textarea data-feature="basic" class="summernote" name="description"></textarea>
            </div>
          </div>
          <div class="text-right mt-5">
            <button class="button w-24 bg-theme-1 text-white" type="submit">Save</button>
          </div>
        </div>
        <!-- END: Form Layout -->
      </div>
    </div>
  </form>
</div>
